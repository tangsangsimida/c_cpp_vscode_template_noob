{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) 启动调试",
            "type": "cppdbg",
            "request": "launch",
            // 自动追踪 CMake 当前构建生成的可执行文件路径
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}